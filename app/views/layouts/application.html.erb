<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="<%= posts_path %>">Посты <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
            </ul>

          </div>
          <%# link_to 'New path', new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Новый пост", new_post_path, class: "nav-link"%>
            </li>
            <li class="nav-item active">
              <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link"%>
            </li>
            <% else %>
            <li class="nav-item active">
              <%= link_to "Выход", new_user_session_path, class: "nav-link"%>
            </li>
            <li class="nav-item active">
              <%= link_to "Регистрация", new_user_registration_path, class: "nav-link"%>
            </li>
            <% end %>

          </ul>
        </nav>
    </div>

    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert <%= bootstrap_class_for(name) %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
