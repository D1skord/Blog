<h1>Посты за неделю</h1>
<% @posts.each do |post| %>

  <article class="post">
    <section class="post-head">
      <h2><%= link_to post.title, "http://localhost:3000/posts/"+post.id.to_s%></h2>
      <small>
        <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>

      </small>
    </section>

    <section class="post-summary">
      <%= post.summary %>
    </section>
  </article>

<% end %>